<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  
	<view name="splash">

        <splash name="splash">
            <pos>0 0</pos>
            <origin>0 0</origin>
            <size>1 1</size>
            <minSize>1 1</minSize>
            <backgroundColor>030303</backgroundColor>
        </splash>
		
		<image name="background">
            <pos>0 0</pos>
            <origin>0 0</origin>
            <size>1 1</size>
			<zIndex>0</zIndex>
		</image>

        <image name="background_gamecc" extra="true">
            <pos>0 0</pos>
            <origin>0 0</origin>
            <size>1 1</size>
	    	<path>./_assets/splash.png</path>
			<zIndex>10</zIndex>
		</image>
	
		<image name="progressbar, progressbar:active">
            <origin>0 0</origin>
            <pos>0.3 0</pos>
            <size>0.4 1</size>
			<visible>true</visible>
            <zIndex>1</zIndex>
		</image>

		<image name="progressbar">
			<color>030303</color>
		</image>

		<image name="progressbar:active">
			<color>9f0043</color>
		</image>

		<text name="label">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 0.1</size>
            <fontPath>./_assets/fonts/RobotoCondensed-Regular.ttf</fontPath>
            <fontSize>0.032</fontSize>
            <color>FFFFFF</color>
            <glowColor>222222</glowColor>
            <glowSize>1</glowSize>
            <glowOffset>1</glowOffset>
            <lineSpacing>1.0</lineSpacing>
            <alignment>center</alignment>
            <verticalAlignment>center</verticalAlignment>
            <zIndex>99</zIndex>
		</text>
	
	</view>	

</theme>